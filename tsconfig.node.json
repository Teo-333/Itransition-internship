{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src/backend",
    "outDir": "./dist/backend",
    "sourceMap": true,
    "composite": true
  },
  "include": [
    "src/backend/**/*.ts",
    "src/backend/**/*.tsx"
  ],
  "exclude": [
    "dist/backend"
  ]
}

